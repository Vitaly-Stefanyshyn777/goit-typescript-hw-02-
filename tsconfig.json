{
  "compilerOptions": {
    // "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@features/*": ["features/*"],
      "@widgets/*": ["widgets/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}